<div class="container">
{{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}


    <div class="form-group card-label">
    {{ form_label(form.nom, "Nom fournisseur")  }}
    {{ form_widget(form.nom,({'class':'form-control'})) }}
    {% if form_errors(form.nom) is not empty %}
    <div class="alert alert-danger"
    {{ form_errors(form.nom) }}
    </div>
    {% endif %}
    </div>


    <div class="form-group card-label">
    {{ form_label(form.prenom, "Prenom fournisseur")  }}
    {{ form_widget(form.prenom,({'class':'form-control'})) }}
    {% if form_errors(form.prenom) is not empty %}
    <div class="alert alert-danger"
    {{ form_errors(form.prenom) }}
    </div>
    {% endif %}
    </div>


    <div class="form-group card-label">
    {{ form_label(form.email, "E-mail fournisseur")  }}
    {{ form_widget(form.email,({'class':'form-control'})) }}
    {% if form_errors(form.email) is not empty %}
    <div class="alert alert-danger"
    {{ form_errors(form.email) }}
    </div>
    {% endif %}
    </div>


    <div class="form-group card-label">
    {{ form_label(form.tel, "telephone fournisseur")  }}
    {{ form_widget(form.tel,({'class':'form-control'})) }}
    {% if form_errors(form.tel) is not empty %}
    <div class="alert alert-danger"
    {{ form_errors(form.tel) }}
    </div>
    {% endif %}
    </div>
    
    <button class="btn btn-primary submit-btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
</div>